{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "meta-data.json schema",
    "type": "array",
    "items": {
        "type": "object",
        "required": [
            "Id",
            "Name",
            "File",
            "Keywords"
        ],
        "properties": {
            "Id": {
                "type": "string",
                "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$",
                "minLength": 36,
                "maxLength": 36
            },
            "Name": {
                "type": "string",
                "minLength": 1
            },
            "File": {
                "type": "string",
                "minLength": 5
            },
            "Keywords": {
                "type": "array",
                "items": {
                    "type": "string",
                    "minLength": 1
                }
            },
            "Source": {
                "type": "string"
            },
            "Description": {
                "type": "string"
            }
        },
        "additionalProperties": true
    }
}